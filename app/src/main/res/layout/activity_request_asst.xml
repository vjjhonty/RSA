<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#8e44ad"
    tools:context="com.example.jhonty.rsaproject.RequestAsst">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowCount="10"
        android:columnCount="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="HOW CAN WE HELP YOU WITH ?"
            android:ems="100"
            android:background="@color/button_material_light"
            android:id="@+id/t1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="We will help to determine the service you require."
            android:ems="100"
            android:background="@color/button_material_light"
            android:id="@+id/t2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Start"
            android:ems="100"
            android:id="@+id/b1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has a flat tire"
            android:ems="100"
            android:id="@+id/b2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out of fuel"
            android:ems="100"
            android:id="@+id/b3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Start"
            android:ems="100"
            android:id="@+id/b4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locked out / Lost Keys"
            android:ems="100"
            android:id="@+id/b5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has a mechanical issue"
            android:ems="100"
            android:id="@+id/b6" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is damged/stuck"
            android:ems="100"
            android:id="@+id/b7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:ems="100"
            android:id="@+id/b8" />

    </GridLayout>
</RelativeLayout>
